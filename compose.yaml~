version: "3.9"

services:
  db:
    image: postgres:16
    ports:
      - "5432:5432"
    environment:
      POSTGRES_DB: app_dev
      POSTGRES_USER: app_user
      POSTGRES_PASSWORD: app_pass
    volumes:
      - db_data:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U $$POSTGRES_USER -d $$POSTGRES_DB"]
      interval: 3s
      timeout: 3s
      retries: 10

  app:
    build:
      context: .
      dockerfile: Dockerfile
    command: ["/app/entrypoint.sh"]
    env_file:
      - .env.development
    ports:
      - "5000:5000"
    volumes:
      - ./src:/app/src:rw
      - ./tests:/app/tests:rw
      # optional: mount your local Poetry cache to speed up builds:
      # - ~/.cache/pypoetry:/root/.cache/pypoetry
    depends_on:
      db:
        condition: service_healthy

volumes:
  db_data:
