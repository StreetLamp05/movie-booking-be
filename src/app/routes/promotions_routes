from flask import Blueprint
from ..middleware.auth import require_admin
from ..controllers.promotions_controller import (create_promotion, send_promotion_email, 
get_active_promotions, get_promotion_by_code)

bp = Blueprint("promotions_routes", __name__, url_prefix="/promo")

# POST /api/v1/promo
@bp.post("")
@require_admin
def create_promotion():
    return create_promotion()

# POST /api/v1/promo/email/<promotion_id>
@bp.post("/email/<promotion_id>")
@require_admin
def send_promotion_email(promotion_id):
    return send_promotion_email(promotion_id)

# GET /api/v1/promo
@bp.get("")
@require_admin
def get_active_promotions():
    return get_active_promotions()

# GET /api/v1/promo/<code>
@bp.get("/<code>")
def get_promotion_by_code(code):
    return get_promotion_by_code(code)




